{% extends '::backend.html.twig' %}
{% form_theme formulario 'CoreBundle:Form:form_unity.html.twig' %}

{% block title %}
{{ parent() }} - Editar Usuario
{% endblock %}

{% block contenido %}
<div class="span12">
    <div class="well-large">
        {% include ':includes:flashes.html.twig' %}
        <form class="sky-form" action="{{ path('usuario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(formulario) }}>
            <header>Editar Usuario</header>
            <fieldset>
                    {% include ':includes:flashes.html.twig' %}
                    {{ form_widget(formulario) }}
                    {% include "CoreBundle:Default:volverGuardarPass.html.twig" with { 'path' : 'usuario' } %}
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}
