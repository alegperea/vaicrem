{% extends '::backend.html.twig' %}
{% form_theme form 'CoreBundle:Form:form.html.twig' %}

{% block title %}
Crear Perfil 
{% endblock title %}

{% block contenido %}
<div class="span12">
    <div class="well-large">
        <h1>Crear Perfil </h1>
        {% include ':includes:flashes.html.twig' %}
        <form action="{{ path('perfil_create') }}" method="post" {{ form_enctype(form) }}>
                    <div class="input-group" style="margin-bottom: 10px;">
                        <label style="width: 200px; padding-right: 20px; float: left; font-weight: bold; text-align:right;">Nombre</label><div style="float:left;">{{ form_widget(form.nombre) }}</div>
                    </div>
                    <div class="input-group" style="margin-bottom: 10px;"> 
                        <label style="width: 200px; padding-right: 20px; float: left; font-weight: bold; text-align:right;">Descripcion</label><div style="float:left;">{{ form_widget(form.descripcion) }}</div>
                    </div>
                    <div class="input-group" style="margin-bottom: 10px;">
                       <label style="width: 200px; padding-right: 20px; float: left; font-weight: bold; text-align:right;">Pagina de Inicio</label><div style="float:left;">{{ form_widget(form.pagina_inicio_default) }}</div>
                    </div>
                    <div class="input-group" style="margin-bottom: 10px;">
                       <label style="width: 200px; padding-right: 20px; float: left; font-weight: bold; text-align:right;">Roles</label><div style="float:left;">{{ form_widget(form.roles) }}</div>
                    </div>
                    {{ form_rest(form) }}
                {% include "CoreBundle:Default:volverGuardar.html.twig" with { 'path' : 'perfil' } %}
        </form>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}