{% extends '::backend.html.twig' %}

{% block title %}Listado de Roles{% endblock %}

{% block contenido %}

<h1>Listado de Roles</h1>
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="tabla">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            {#<th>Acciones</th>#}
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.nombre }}</td>
            <td>{{ entity.descripcion }}</td>
            {#<td>
                <a href="{{ path('rol_show', { 'id': entity.id }) }}">{% include ":includes:_verIcon.html.twig" %}</a>
            </td>#}
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
mostrarTabla('#tabla');
</script>
{% endblock %}