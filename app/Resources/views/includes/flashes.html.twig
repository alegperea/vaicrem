{% set tipo_mensajes = app.session.flashBag.all %}
{% if tipo_mensajes|length > 0 %}
    {% for key,  messages in tipo_mensajes %}
        {% for  message in messages %}
            <div class="alert alert-{{ key }} alert-dismissible fade in{% if key == "error" %} alert-danger{% endif %}">
                <button class="close" data-dismiss="alert" href="#"><span aria-hidden="true">Ã—</span></button>
                {{ message |raw}}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}
 